FROM node:8

WORKDIR /opt
COPY ./fe-dessertation-client .

WORKDIR /opt/fe-dessertation-client
RUN npm install
RUN npm run build

WORKDIR /opt
RUN cp ./fe-dessertation-client/dist ./dist
COPY ./fe-dessertation-client/appServer.js .
COPY ./fe-dessertation-client/package.json .
RUN mv ./fe-dessertation-client .
EXPOSE 8082

CMD [ "node", "appServer.js" ]